             mc:Ignorable="d"
             x:Name="root"
             x:Class="SkiaSharpTest.Controls.MachineStateSkiaLayout">
    <Grid
            Padding="10"
            RowSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="{Binding Path=WidthContent,Source={x:Reference root}}"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="{Binding Path=HeightContent,Source={x:Reference root}}"/>
        </Grid.RowDefinitions>
        <controls:MachineChartsView
                x:Name="machineCharts"
                DataSource="{Binding Path=DataSource,Source={x:Reference root}}"
                Grid.Column="0"
                Grid.Row="0"/>
    </Grid>
