<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:controls="clr-namespace:SkiaSharpTest.Controls"
             mc:Ignorable="d"
             x:Class="SkiaSharpTest.MainPage">
    <StackLayout>
        <controls:MachineStateSkiaLayout
            DataSource="{Binding MachineChart}"
            WidthContent="{StaticResource ChartWidth}"
            HeightContent="{OnIdiom Phone={StaticResource ContainerHeightPhone}, Tablet={StaticResource ContainerHeight}}"/>
        <controls:MachineInfoSkiaLayout
            DataSource="{Binding MachineInfo}"
            WidthContent="*"
            HeightContent="{OnIdiom Phone=100, Tablet=140}"/>


    </StackLayout>
</ContentPage>
